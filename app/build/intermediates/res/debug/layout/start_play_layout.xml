<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/start_play_rlLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/artist_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@drawable/img_album_background" />

        <TextView
            android:id="@+id/music_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/artist_iv"
            android:layout_toRightOf="@id/artist_iv"
            android:text="常回家"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/music_artist_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/music_name_tv"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/artist_iv"
            android:text="乖乖"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/menu_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:scaleType="matrix"
            android:src="@drawable/icon_menu_point" />

        <ImageView
            android:id="@+id/next_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/menu_iv"
            android:src="@drawable/img_button_notification_play_next" />

        <ImageView
            android:id="@+id/play_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/next_iv"
            android:src="@drawable/img_button_notification_play_play" />

        <ImageView
            android:id="@+id/pause_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/next_iv"
            android:src="@drawable/img_button_notification_play_pause"
            android:visibility="gone" />


    </RelativeLayout>

    <ProgressBar
        android:id="@+id/start_play_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="2.0dp"
        android:minHeight="2.0dp" />

</LinearLayout>
